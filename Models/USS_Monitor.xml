 <model>
  <name>Interior</name>
  <path>Aircraft/Monitor/Models/Interior/interior.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m> 0.00 </x-m>
   <y-m> 0.00 </y-m>
   <z-m> 0.00 </z-m>
  </offsets>
 </model>

 <model>
  <name>Port boiler smoke</name>
  <path>Aircraft/Monitor/Models/Effects/smoke.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m> 32.66 </x-m>
   <y-m> -1.32 </y-m>
   <z-m>  3.60 </z-m>
  </offsets>
 </model>
 <model>
  <name>Starboard boiler smoke</name>
  <path>Aircraft/Monitor/Models/Effects/smoke.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m> 32.66 </x-m>
   <y-m>  1.32 </y-m>
   <z-m>  3.60 </z-m>
  </offsets>
 </model>

 <animation>
  <type>rotate</type>
  <object-name>turret_axis</object-name>
  <object-name>turret_stanchions</object-name>
  <object-name>turret_armor</object-name>
  <object-name>turret_braces</object-name>
  <object-name>turret_floor_beams</object-name>
  <object-name>turret_flooring</object-name>
  <object-name>turret_roof_beams</object-name>
  <object-name>turret_roof</object-name>
  <object-name>gun.L</object-name>
  <object-name>gun.R</object-name>
  <object-name>gun_carriage.L</object-name>
  <object-name>gun_carriage.R</object-name>
  <object-name>gun_friction_beams</object-name>
  <property>sim/model/turret-bearing-deg</property>
  <factor>-1.0</factor>
  <offset-deg>90.0</offset-deg>
  <center>
   <x-m> 25.45 </x-m>
   <y-m>  0.00 </y-m>
   <z-m>  0.00 </z-m>
  </center>
  <axis>
   <x> 0.0 </x>
   <y> 0.0 </y>
   <z> 1.0 </z>
  </axis>
 </animation>

 <!-- Water ================================================================-->
 <model>
  <name>Water</name>
  <path>Aircraft/MTB_20m/Models/water.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>25.50</x-m>
   <y-m>0.00</y-m>
   <z-m>3.00</z-m>
  </offsets>
 </model>

